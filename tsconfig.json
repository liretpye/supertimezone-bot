{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "outDir": "dest",
    "baseUrl": "src",
    "allowJs": false,
    "target": "es5",
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "dest",
    "node_modules",
    "scripts"
  ]
}
